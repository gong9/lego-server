{
  "name": "lego-server",
  "version": "1.0.0",
  "description": "lego-server",
  "main": "src/index.js",
  "scripts": {
    "start": "nodemon src/index.js",
    "prepare": "husky install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "server",
    "node"
  ],
  "author": "gong",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "multer": "^1.4.3"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "commitizen": "^4.2.5",
    "cz-customizable": "^6.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.19"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,vue}": [
      "eslint --fix",
      "git add"
    ]
  }
}